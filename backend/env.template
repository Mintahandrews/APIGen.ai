# Backend Environment Variables
# Universal API Client Generator v2.0
# 
# INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Update the values as needed
# 3. Never commit .env to version control

# ============================================
# Server Configuration
# ============================================
HOST=0.0.0.0
PORT=8000
DEBUG=True
RELOAD=True

# ============================================
# CORS Settings
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# ============================================
# API Configuration
# ============================================
API_TITLE=Universal API Client Generator
API_VERSION=2.0.0
API_DESCRIPTION=Generate API clients in 10+ languages

# ============================================
# Generation Settings
# ============================================
# Maximum file size for uploads (in MB)
MAX_UPLOAD_SIZE=10

# Default package name
DEFAULT_PACKAGE_NAME=api_client

# Enable/disable features
ENABLE_PREVIEW=True
ENABLE_BATCH_GENERATION=True
ENABLE_CLI=True

# ============================================
# Rate Limiting (Optional)
# ============================================
# RATE_LIMIT_ENABLED=False
# RATE_LIMIT_PER_MINUTE=60

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/api.log

# ============================================
# Security (Optional)
# ============================================
# API_KEY_REQUIRED=False
# API_KEY=your-secret-api-key-here

# ============================================
# Database (Future Use)
# ============================================
# DATABASE_URL=sqlite:///./generator.db

# ============================================
# Redis Cache (Future Use)
# ============================================
# REDIS_URL=redis://localhost:6379/0
# CACHE_ENABLED=False

# ============================================
# Email Notifications (Future Use)
# ============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-password
# EMAIL_FROM=noreply@apigenerator.com

# ============================================
# Analytics (Future Use)
# ============================================
# ANALYTICS_ENABLED=False
# GOOGLE_ANALYTICS_ID=UA-XXXXX-Y

# ============================================
# Development Settings
# ============================================
# Set to False in production
DEVELOPMENT_MODE=True
SHOW_DOCS=True
